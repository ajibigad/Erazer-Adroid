<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ajibigad.erazer.activities.DashboardActivity"
    tools:showIn="@layout/activity_dashboard">

    <!--<fragment-->
    <!--android:id="@+id/overview_fragment"-->
    <!--android:name="com.ajibigad.erazer.activities.fragments.ExpenseOverviewFragment"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--tools:layout="@layout/fragment_expense_overview"/>-->

    <FrameLayout
        android:id="@+id/overview_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_expense_overview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_create_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Expense"
            style="@style/ButtonStyle" />

        <Button
            android:id="@+id/btn_view_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Users"
            style="@style/ButtonStyle"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>
